<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBold16">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="TextNormal14">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="Theme.YagaChat" parent="Base.Theme.YagaChat" />

    <style name="Round6dp">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Round12dp">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundTopRightAndBottomLeft20dp">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="cornerRadius">16dp</item>
        <item name="android:radius">16dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>